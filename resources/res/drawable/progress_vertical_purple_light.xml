<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center" android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <size android:width="6dp"/>
            <solid android:color="@color/neutral200"/>
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <scale android:scaleHeight="100%" android:scaleGravity="bottom">
            <shape android:shape="rectangle">
                <corners android:radius="10dp"/>
                <size android:width="6dp"/>
                <solid android:color="@color/white"/>
            </shape>
        </scale>
    </item>
    <item android:id="@android:id/progress">
        <scale android:scaleHeight="100%" android:scaleGravity="bottom">
            <shape android:shape="rectangle">
                <corners android:radius="10dp"/>
                <size android:width="6dp"/>
                <solid android:color="@color/purple500"/>
            </shape>
        </scale>
    </item>
</layer-list>
