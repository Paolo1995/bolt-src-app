<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout android:background="@drawable/background_quick_access_details" android:padding="16dp" android:layout_width="272dp" android:layout_height="170dp" android:layoutDirection="locale">
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/textPrimaryWhite" android:id="@+id/tvTitle" android:layout_width="0dp" android:layout_height="wrap_content" android:textDirection="locale" app:layout_constraintEnd_toStartOf="@+id/btnOpenApp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
        <ImageView android:id="@+id/btnOpenApp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_open_app" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toEndOf="@+id/tvTitle" app:layout_constraintTop_toTopOf="0"/>
        <TextView android:textSize="14sp" android:textColor="@color/textPrimaryWhite" android:id="@+id/tvDetails1" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:maxLines="1" android:textDirection="locale" app:layout_constraintBottom_toTopOf="@+id/tvDetails2" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/tvTitle"/>
        <TextView android:textSize="14sp" android:textColor="@color/textPrimaryWhite" android:id="@+id/tvDetails2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:maxLines="1" android:textDirection="locale" app:layout_constraintEnd_toStartOf="@+id/containerRatingRides" app:layout_constraintHorizontal_bias="0" app:layout_constraintHorizontal_chainStyle="packed" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/tvDetails1"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/containerRatingRides" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layoutDirection="locale" android:layout_marginStart="4dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toEndOf="@+id/tvDetails2" app:layout_constraintTop_toTopOf="@+id/tvDetails2">
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/yellow500" android:id="@+id/clientRating" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textDirection="locale"/>
            <ImageView android:id="@+id/clientRatingAsterisk" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/ic_new_order_client_rating" android:layout_marginStart="4dp"/>
            <TextView android:textSize="14sp" android:textColor="@color/white" android:id="@+id/clientRatingSeparator" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginRight="4dp" android:text="@string/dot_separator" android:alpha="0.48" android:textDirection="locale"/>
            <TextView android:textSize="14sp" android:textColor="@color/white" android:id="@+id/clientRidesCount" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:textDirection="locale"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.Barrier android:id="@+id/contentBarrier" android:layout_width="wrap_content" android:layout_height="wrap_content" app:barrierDirection="bottom" app:constraint_referenced_ids="tvTitle,tvDetails1,tvDetails2,containerRatingRides,btnOpenApp"/>
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/textPrimaryWhite" android:id="@+id/tooltipText" android:background="@drawable/tooltip_background" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/start_paid_waiting" android:textDirection="locale" android:paddingStart="8dp" android:paddingEnd="8dp" app:layout_constraintBottom_toTopOf="@+id/tooltipTick" app:layout_constraintEnd_toEndOf="0"/>
        <ImageView android:id="@+id/tooltipTick" android:layout_width="12dp" android:layout_height="6dp" android:src="@drawable/tooltip_tick" app:layout_constraintBottom_toTopOf="@+id/buttonPaidWaiting" app:layout_constraintEnd_toEndOf="@+id/buttonPaidWaiting" app:layout_constraintStart_toStartOf="@+id/buttonPaidWaiting"/>
        <androidx.constraintlayout.widget.Group android:id="@+id/tooltipGroup" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" app:constraint_referenced_ids="tooltipTick,tooltipText"/>
        <ee.mtakso.driver.uikit.widgets.RoundButton android:id="@+id/buttonAction" android:padding="0dp" android:layout_width="0dp" android:layout_height="48dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toStartOf="@+id/paidWaitingSpacer" app:layout_constraintStart_toStartOf="0" style="@style/Widget.UIKit.QuickAccess.RoundButton.Primary"/>
        <View android:id="@+id/paidWaitingSpacer" android:layout_width="12dp" android:layout_height="48dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toStartOf="@+id/buttonPaidWaiting"/>
        <ee.mtakso.driver.uikit.widgets.RoundButton android:textColor="@color/textPrimaryWhite" android:id="@+id/buttonPaidWaiting" android:padding="0dp" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginStart="12dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:rb_backgroundColor="@color/white" style="@style/Widget.UIKit.QuickAccess.RoundButton"/>
        <androidx.constraintlayout.widget.Group android:id="@+id/buttonPaidWaitingGroup" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" app:constraint_referenced_ids="paidWaitingSpacer,buttonPaidWaiting"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
