    <eu.bolt.client.design.indicator.DesignPointingTriangleView android:id="@+id/triangle" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginBottom="-4dp" android:layout_centerHorizontal="true" android:rotation="90"/>
</RelativeLayout>
