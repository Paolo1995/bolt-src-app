<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:id="@+id/earnings_dailySplitSummaryLayout" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:gravity="start" android:layout_gravity="center_vertical" android:layout_width="20dp" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:src="@drawable/ic_card_active_ride"/>
            <TextView android:textSize="17sp" android:textColor="@color/white" android:id="@+id/earnings_dailyInAppRevenue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/char_hyphen" android:fontFamily="@font/euclid_circular_b_regular" android:layout_marginStart="8dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:gravity="start" android:layout_gravity="center_vertical" android:layout_width="20dp" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:src="@drawable/ic_cash_active_ride"/>
            <TextView android:textSize="17sp" android:textColor="@color/white" android:gravity="end|center_vertical" android:id="@+id/earnings_dailyNotInAppRevenue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/char_hyphen" android:fontFamily="@font/euclid_circular_b_regular" android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:id="@+id/earnings_dailyRevenueSumLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp">
        <TextView android:textSize="20sp" android:textColor="@color/white" android:layout_gravity="center_vertical" android:id="@+id/earnings_dailyRevenueSum" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/char_hyphen" android:fontFamily="@font/euclid_circular_b_regular"/>
    </LinearLayout>
    <LinearLayout android:layout_gravity="center" android:id="@+id/earnings_dailyBonusLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:layout_marginStart="12dp">
        <TextView android:textSize="18sp" android:textColor="@color/yellow500" android:layout_gravity="center_vertical" android:id="@+id/earnings_dailyBonus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/euclid_circular_b_regular"/>
    </LinearLayout>
</LinearLayout>
